html, head, body
  margin: 0
  height: 100%


body
  background: #eee

#tabs
  padding: 1em
  background-color: #60b5cc

  ul
    margin: 0
    padding: 0
    list-style-type: none
    text-align: center

  li
    display: inline-block

.tab
  text-decoration: none
  color: #34495e
  padding-bottom: 13px
  margin: 0 1.5em
  font-size: 20px

  &:hover, .current
    text-decoration: none
    color: #34495e
    border-bottom: 3px solid #34495e

.content li
  margin-bottom: 6px

.home-section h1
  text-align: center
  font-size: 3em
  margin-top: 100px
  margin-bottom: 0


.features
  display: block
  margin: 0 auto
  padding: 0

  li
    list-style-type: none

.splash
  padding: 1em
  background-color: #60b5cc
  color: white
  text-align: center
